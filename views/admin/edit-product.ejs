<%- include('../includes/header.ejs') %>
<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <div class="flex-col flex-col-center">
            <% if(editMode){%>
                <h1>Edit Product</h1>
            <% } else {%>
                <h1>Add Product</h1>
            <% }%>
            <form action="/admin/<% if(editMode){%>edit-product/<%=product.id%><%} else {%>add-product<%}%>" method="post" class="w-30p">
                <div class="form-group flex-col">
                    <label for="title">Title</label>
                    <input type="text" name="title" value="<%= editMode ? product.title : '' %>">
                </div>
                <div class="form-group flex-col">
                    <label for="imageUrl">Image Url</label>
                    <input type="text" name="imageUrl" value="<%= editMode ? product.imageUrl : '' %>">
                </div>
                <div class="form-group flex-col">
                    <label for="price">Price</label>
                    <input type="number" name="price" step="0.01" value=<%= editMode ? product.price : '' %>>
                </div>
                <div class="form-group flex-col">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" cols="10" rows="10"><%= editMode ? product.description : '' %></textarea>
                </div>
                <button type="submit" class="submit-form">Submit</button>
            </form>
        </div>
    </main>
</body>
</html>